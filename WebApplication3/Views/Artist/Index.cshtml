@model IEnumerable<Artist>
@{
    ViewData["Title"] = "Index";
}

<a asp-action="Create">Create an Artist</a>
<h2>Here is the list of Artists</h2>
<table style="width:50%">
    <thead>
        <tr>
            <th>Artist</th>
            <th>-</th>
            <th>Name</th>
            <th></th>
            <th></th>      
        </tr>
    </thead>
    <tbody>
        @foreach (Artist e in Model)
        {
            <tr>
                <td>@e.ArtistId</td>
                <th></th>
                <td>@e.Name</td>
                <td><a asp-action="AlbumsByArtists" asp-route-id=@e.ArtistId>Album Detail</a></td>
                <td></td>
                <td><a asp-action="Update" asp-route-empname="@e.Name">Update</a></td>
                <td><form asp-route-empname="@e.Name" asp-action="Delete" method="post"><button type="submit">Delete</button>
            </form>
            </tr>
        }
    </tbody>
</table>